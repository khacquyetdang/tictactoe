<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGamesBackGround"
    tools:context="khacquyetdang.android.com.tictactoe.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:columnCount="3"
            android:rowCount="3">

            <Button
                android:id="@+id/imageButton1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:background="@color/colorOrange"
                android:contentDescription=""
                android:tag="00"
                android:text="00" />

            <Button
                android:id="@+id/imageButton2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@color/colorBlue"
                android:tag="10"
                android:text="10" />

            <Button
                android:id="@+id/imageButton3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/colorOrange"
                android:tag="20"
                android:text="20" />

            <Button
                android:id="@+id/imageButton4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:background="@color/colorBlue"
                android:tag="01"
                android:text="01" />

            <Button
                android:id="@+id/imageButton5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@color/colorOrange"
                android:tag="11"
                android:text="11" />

            <Button
                android:id="@+id/imageButton6"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/colorBlue"
                android:tag="21"
                android:text="21" />

            <Button
                android:id="@+id/imageButton7"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:layout_rowSpan="1"
                android:background="@color/colorOrange"
                android:tag="02"
                android:text="02" />

            <Button
                android:id="@+id/imageButton8"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:layout_rowSpan="1"
                android:background="@color/colorOrange"
                android:tag="12"
                android:text="12" />

            <Button
                android:id="@+id/imageButton9"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_column="2"
                android:layout_columnSpan="1"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:layout_rowSpan="1"
                android:background="@color/colorBlue"
                android:tag="22"
                android:text="22" />

        </GridLayout>

        <LinearLayout
            android:id="@+id/playAgainLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:alpha="1"
            android:background="#afb5d3"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/playAgainTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Player 1 wins"
                    android:textColor="#161d57"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/playAgainBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/playAgainTextView"
                    android:layout_centerHorizontal="true"
                    android:background="#c22614"
                    android:textColor="#161d57"
                    android:elevation="10dp"
                    android:layout_margin="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Play again" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
